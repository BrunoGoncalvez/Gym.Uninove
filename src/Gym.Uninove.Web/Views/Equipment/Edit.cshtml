@model Gym.Uninove.Core.Entities.Equipment

@{
    ViewData["Title"] = "Equipamento";
}


<div class="d-flex p-3 my-3 text-white bg-secondary rounded shadow-sm">
    <div class="d-flex align-items-center mr-auto">
        <span style="font-size: 48px;"><i class="fa-solid fa-dumbbell"></i></span>
        <div class="lh-100 ml-3">
            <h2 class="mb-0 lh-100">Alterar @ViewData["Title"]</h2>
            <small>@ViewData["Title"]</small>
        </div>
    </div>
    <div class="d-flex align-items-center">
        <a class="btn btn-sm btn-outline-light" asp-action="Index">Todos Equipamentos</a>
    </div>
</div>

<hr />

<section class="gradient-custom">
    <div class="container py-3">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-12 col-xl-12">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label asp-for="Name" class="form-label"></label>
                                        <input asp-for="Name" class="form-control form-control-lg" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label asp-for="DatePurchase" class="form-label"></label>
                                        <input type="date" asp-for="DatePurchase" class="form-control form-control-lg" />
                                        <span asp-validation-for="DatePurchase" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">

                                    <select class="select form-control-lg">
                                        <option value="0" disabled selected>Estado do Equipamento</option>
                                        <option value="1">Novo</option>
                                        <option value="2">Usado</option>
                                    </select>
                                    <label class="form-label select-label">Status</label>
                                </div>
                            </div>

                            <div class="mt-4 pt-2">
                                <input data-mdb-ripple-init class="btn btn-primary btn-lg" type="submit" value="Submit" />
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



