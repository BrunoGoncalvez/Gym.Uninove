@model Gym.Uninove.Web.Models.ViewModels.UserViewModel

<section class="">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                <form asp-action="Create" class="mx-1 mx-md-4">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg  fa-fw icon-form-user"></i>
                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            <input asp-for="Name" type="text" class="form-control" />
                                            <label asp-for="Name" class="form-label">Seu Nome</label>
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg  fa-fw icon-form-user"></i>
                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            <input asp-for="Email" type="email" class="form-control" />
                                            <label asp-for="Email" class="form-label">Seu E-mail</label>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg  fa-fw icon-form-user"></i>
                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            <input asp-for="Password" type="password"  class="form-control" />
                                            <label asp-for="Password" class="form-label">Senha</label>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg  fa-fw icon-form-user"></i>
                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            <input asp-for="PasswordConfirmed" type="password" class="form-control" />
                                            <label asp-for="PasswordConfirmed" class="form-label">confirme a senha</label>
                                            <span asp-validation-for="PasswordConfirmed" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <span asp-validation-for="AcceptTerms" class="text-danger"></span>
                                    <div class="form-check d-flex mb-5">
                                        <input class="form-check-input" asp-for="AcceptTerms" type="checkbox" />
                                        <label class="form-check-label" asp-for="AcceptTerms">
                                            I agree all statements in <a href="#!">Terms of service</a>
                                        </label>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg">Register</button>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>