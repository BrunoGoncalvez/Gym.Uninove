@model Gym.Uninove.Core.Entities.Teacher

@{
    ViewData["Title"] = "Alterar Instrutor";
}

<div class="d-flex p-3 my-3 text-white bg-secondary rounded shadow-sm">
    <div class="d-flex align-items-center mr-auto">
        <span style="font-size: 48px;"><i class="fa-solid fa-user-graduate"></i></span>
        <div class="lh-100 ml-3">
            <h2 class="mb-0 lh-100">@ViewData["Title"]</h2>
            <small>@Model.Name</small>
        </div>
    </div>
    <div class="d-flex align-items-center">
        <a class="btn btn-sm btn-outline-light" asp-action="Index">Instrutor</a>
    </div>
</div>

<section class="vh-100 gradient-custom">
    <div class="container py-3">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-12 col-xl-12">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-12 mb-4">

                                    <div data-mdb-input-init class="form-outline">
                                        <label asp-for="Name" class="form-label"></label>
                                        <input asp-for="Name" class="form-control form-control-lg" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 mb-4">

                                    <div data-mdb-input-init class="form-outline">
                                        <label asp-for="Description" class="form-label"></label>
                                        <input asp-for="Description" class="form-control form-control-lg" />
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="mt-4 pt-2">
                                <input data-mdb-ripple-init class="btn btn-primary btn-lg" type="submit" value="Submit" />
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
