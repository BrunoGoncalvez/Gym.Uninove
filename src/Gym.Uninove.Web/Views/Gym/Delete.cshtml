@model Gym.Uninove.Core.Entities.GymBranch

@{
    ViewData["Title"] = "Remover Gym";
}

<div class="d-flex p-3 my-3 text-white bg-secondary rounded shadow-sm">
    <div class="d-flex align-items-center mr-auto">
        <span style="font-size: 48px;"><i class="fa-solid fa-dumbbell"></i></span>
        <div class="lh-100 ml-3">
            <h2 class="mb-0 lh-100">@ViewData["Title"]</h2>
            <small>@Model.Name</small>
        </div>
    </div>
    <div class="d-flex align-items-center">
        <a class="btn btn-sm btn-outline-light" asp-action="Index">All Gyms</a>
    </div>
</div>
    
    <div class="d-flex justify-content-center container mt-5">
        <div class="card p-3 bg-white" style="width: 500px;">
            <i class="fa fa-apple"></i>
            <div class="about-product text-center mt-2">
                <img src="https://i.imgur.com/3VTaSeb.png" style="width: 100%;">
                <div>
                    <h4>@Model.Name</h4>
                    <h6 class="mt-0 text-black-50">Unidade: @Model.UnitNumber</h6>
                </div>
            </div>
            <div class="stats mt-2 mb-3">
                <div class="d-flex justify-content-between p-price">
                    <span class="font-weight-bold">
                        Endereço: 
                    </span>
                    <span>
                        @String.Format("{0} {1} ", Model.Address.Street, Model.Address.Number )
                    </span>
                </div>

                <div class="d-flex justify-content-between p-price">
                    <span class="font-weight-bold">
                        Bairro: 
                    </span>
                    <span>
                        @Model.Address.Neighborhood
                    </span>
                </div>

                <div class="d-flex justify-content-between p-price">
                    <span class="font-weight-bold">
                        Telefone: 
                    </span>
                    <span>
                        @Model.Phone
                    </span>
                </div>
            </div>
            @* <div class="d-flex justify-content-between total font-weight-bold mt-4"><span>Total</span><span>$7,197.00</span></div> *@

            <div class="d-flex justify-content-center">
                <form asp-action="DeleteConfirmed">
                    <input type="hidden" asp-for="@Model.Id" />
                    <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
                    <a asp-action="Index" class="btn btn-sm btn-primary">Home</a>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </form>
            </div>
            
        </div>
    </div>
